params {
    tools {
        tangram {		
            	container = 'tangram:latest.sif'
	    	off = 'h5ad'
		// name of cell type annotation used for mapping
	    	annotation = 'cell.type'
		// change to 'all' for MERFISH-like data
		gene_selection_method = 'marker_genes'
		// method for computing marker genes if not computed already
		rank_gene_method = 'wilcoxon'
		number_genes = 100
		qvalue = 0.01
		mapping_mode = 'cells'
		// input scRNAseq reference should be filtered raw data; normalization for marker gene selection is recommended
		normalize = true
		// change to true to project gene expression from single cell reference data
		project_gex = false
		// device for computing mapping, e.g. '0' for 'cuda: 0' change to 'cpu' for using CPU
		device = '0'
        }
    }
    data {
	// file path to single RNA reference
        reference_data {
            file_paths = ''
            suffix = ''
        }
    }
}
